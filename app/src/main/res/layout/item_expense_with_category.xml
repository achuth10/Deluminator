<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardExpense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#4CAF50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main content row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

        <!-- Expense icon -->
        <View
            android:id="@+id/viewExpenseIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@android:color/white"
            android:alpha="0.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Category name -->
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="2dp" />

            <!-- Expense description -->
            <TextView
                android:id="@+id/tvExpenseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch at restaurant"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Amount and Delete Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvExpenseAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚¹ 852.00"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:gravity="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="1sp" />

            <ImageButton
                android:id="@+id/btnDeleteExpense"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete expense"
                android:padding="6dp"
                android:tint="@android:color/white"
                android:alpha="0.8" />

        </LinearLayout>

        </LinearLayout>

        <!-- Footer Section for Auto-Generated Expenses -->
        <LinearLayout
            android:id="@+id/layoutAutoGeneratedFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:alpha="0.2"
                android:layout_marginHorizontal="16dp" />

            <!-- Footer text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto added by recurring"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:alpha="0.7"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
