<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/NeumorphicCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <!-- Category Name at the top -->
        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food &amp; Dining"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="start"
            android:layout_marginBottom="@dimen/spacing_small"
            android:paddingHorizontal="4dp" />

        <!-- Budget Summary - Left/Right Layout with Dividers like main overview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <!-- Spent -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spent"
                    android:textSize="14sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tvSpentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹320"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor"
                    android:maxLines="1"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorSurfaceVariant"
                android:layout_marginHorizontal="4dp"
                android:alpha="0.3" />

            <!-- Remaining -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Left"
                    android:textSize="14sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tvRemainingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹180"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor"
                    android:maxLines="1"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarCategory"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:progress="64"
            android:progressTint="@color/success_color"
            android:progressBackgroundTint="?attr/progressBackgroundColor" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
