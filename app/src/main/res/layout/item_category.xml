<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/NeumorphicCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <!-- Category Name and Budget Info - Horizontal Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <!-- Category Name -->
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food &amp; Dining"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textColor="?attr/primaryTextColor"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="start|center_vertical" />

            <!-- Spent and Remaining - Vertical Layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

            <!-- Spent -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginBottom="@dimen/spacing_tiny">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spent"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/secondaryTextColor"
                    android:layout_marginBottom="@dimen/spacing_micro" />

                <TextView
                    android:id="@+id/tvSpentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹320"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />

            </LinearLayout>

            <!-- Remaining -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/secondaryTextColor"
                    android:layout_marginBottom="@dimen/spacing_micro" />

                <TextView
                    android:id="@+id/tvRemainingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹180"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarCategory"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:progress="64"
            android:progressTint="@color/success_color"
            android:progressBackgroundTint="?attr/progressBackgroundColor" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
