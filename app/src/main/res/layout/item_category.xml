<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/NeumorphicCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category Name -->
        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food &amp; Dining"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="12dp" />

        <!-- Spent vs Remaining -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spent"
                    android:textSize="11sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvSpentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹320"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:textSize="11sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvRemainingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹180"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarCategory"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="64"
            android:progressTint="@color/success_color"
            android:progressBackgroundTint="?attr/progressBackgroundColor" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
