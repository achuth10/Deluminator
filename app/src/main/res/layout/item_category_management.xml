<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    style="@style/NeumorphicCardStyle"
    android:layout_marginTop="0dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Action buttons aligned to top right -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditCategory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit category"
                android:padding="6dp"
                app:tint="@android:color/white"
                android:alpha="0.9"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnDeleteCategory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete category"
                android:padding="6dp"
                app:tint="@android:color/white"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Content area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/layoutActionButtons"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food &amp; Dining"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBudgetLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget: $500.00"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeStepGranularity="1sp" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
