<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main content row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Status indicator line -->
            <View
                android:id="@+id/viewStatusIndicator"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/success_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvExpenseDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly rent payment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvRecurrenceInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly on the 1st at 5:00 AM"
                    android:textSize="12sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvLastGenerated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last: Dec 01, 2023"
                    android:textSize="11sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvExpenseAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,200.00"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor"
                    android:layout_marginBottom="8dp"
                    android:maxLines="1"
                    android:gravity="end"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="18sp"
                    android:autoSizeStepGranularity="1sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:checked="true"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <!-- Footer Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/secondaryTextColor"
            android:alpha="0.1"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>