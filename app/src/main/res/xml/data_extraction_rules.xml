<?xml version="1.0" encoding="utf-8"?>
<!--
   Budget Deluminator data extraction rules for Android 12+
   Controls what data can be extracted during device-to-device transfers and cloud backup
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user data and preferences -->
        <include domain="sharedpref" path="budget_deluminator_prefs.xml"/>
        <include domain="sharedpref" path="currency_prefs.xml"/>
        <include domain="sharedpref" path="theme_prefs.xml"/>
        <include domain="sharedpref" path="spending_roast_prefs.xml"/>
        
        <!-- Include database files -->
        <include domain="database" path="budget_database"/>
        <include domain="database" path="budget_database-shm"/>
        <include domain="database" path="budget_database-wal"/>
        
        <!-- Exclude sensitive security data -->
        <exclude domain="sharedpref" path="biometric_prefs.xml"/>
        <exclude domain="sharedpref" path="background_permissions.xml"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transfer of user data but exclude security settings -->
        <include domain="sharedpref" path="budget_deluminator_prefs.xml"/>
        <include domain="sharedpref" path="currency_prefs.xml"/>
        <include domain="sharedpref" path="theme_prefs.xml"/>
        <include domain="sharedpref" path="spending_roast_prefs.xml"/>
        
        <!-- Include database files for device transfer -->
        <include domain="database" path="budget_database"/>
        <include domain="database" path="budget_database-shm"/>
        <include domain="database" path="budget_database-wal"/>
        
        <!-- Exclude security-related preferences -->
        <exclude domain="sharedpref" path="biometric_prefs.xml"/>
        <exclude domain="sharedpref" path="background_permissions.xml"/>
    </device-transfer>
</data-extraction-rules>